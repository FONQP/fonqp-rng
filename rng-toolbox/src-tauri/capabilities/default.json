{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-appconfig-write"
    },
    {
      "identifier": "fs:allow-appconfig-read"
    },
    "dialog:default"
  ]
}